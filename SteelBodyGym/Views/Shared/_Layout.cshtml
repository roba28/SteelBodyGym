<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SteelBodyGym</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SteelBodyGym.styles.css" asp-append-version="true" />
   
</head>
<body>
    <div class="container-fluid p-0 nav-bar">
        <nav class="navbar navbar-expand-lg bg-none navbar-dark py-3">
            <a href="" class="navbar-brand">
                <h1 class="m-0 display-4 font-weight-bold text-uppercase text-white">SteelBody Gym</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav ml-auto p-4 bg-secondary">
                    <a href="@Url.Action("Index", "Home")" class="nav-item nav-link active">Mi perfil</a>
                    <a href="@Url.Action("AcercaDeNosotros", "Home")" class="nav-item nav-link">Acerca de nosotros</a>
                    <a href="@Url.Action("Servicios", "Home")" class="nav-item nav-link">Servicios </a>
                    <a href="@Url.Action("Clases", "Home")" class="nav-item nav-link">Clases</a>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu text-capitalize">
                            <a href="blog.html" class="dropdown-item">Blog Grid</a>
                            <a href="single.html" class="dropdown-item">Blog Detail</a>
                        </div>
                    </div>
                    <a href="@Url.Action("contacto", "Home")" class="nav-item nav-link">Contacto</a>
                    <a href="@Url.Action("Ingresar", "Home")" class="nav-item nav-link">Ingresar</a>
                </div>
            </div>
        </nav>
    </div>
    <div class="container" ng-app="app">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    @RenderSection("scripts", required: false)
</body>

</html>

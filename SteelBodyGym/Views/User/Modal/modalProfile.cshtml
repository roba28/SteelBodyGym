<!-- Modal -->
<div class="modal fade modal-fullscreen" id="modalProfile" role="dialog" style="position:fixed; z-index:1000; padding-top:5%" data-backdrop="false" ng-app="myApp" ng-controller="ProfileController">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header text-center">

                <h4 class="modal-title ">Editar Perfil</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-md-4">
                            <p>Nombre</p>
                            <input type="text" id="Name" class="form-control phone" ng-model="frmUser.Name" required />
                            <br />
                        </div>
                        <div class="col-md-4">
                            <p>Primer Apellido</p>
                            <input type="text" id="FirstName" class="form-control phone" ng-model="frmUser.Firstname" required />
                            <br />
                        </div>
                        <div class="col-md-4">
                            <p>Segundo Apellido</p>
                            <input type="text" id="LastName" class="form-control phone" ng-model="frmUser.LastName" required />
                            <br />
                        </div>
                        <div class="col-md-4">
                            <p>Correo electrónico</p>
                            <input type="email" id="Email" class="form-control phone" ng-model="frmUser.Email" required />
                            <br />
                        </div>
                        <div class="col-md-4">
                            <p>Teléfono</p>
                            <input type="text" id="Phone" class="form-control phone" ng-model="frmUser.Phone" required />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning text-black" ng-click="uploadProfile()">Guardar</button>
                <button type="button" class="btn btn-danger text-black" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
